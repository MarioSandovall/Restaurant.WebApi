{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Restaurant": "Server=.\\SQLEXPRESS;Database=Restaurant;Trusted_Connection=True;"
  },
  "Jwt": {
    "Key": "KeyVeryVerySecretKey"
  },
  "Serilog": {
    "using": [ "Serilog.Sinks.RollingFile" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "C:\\Logs\\RestaurantWebApi\\log-{Date}.txt",
          "outputTemplate": "{Timestamp} [{Level}] ({SourceContext}) {Message}{NewLine}{Exception}",
          "retainedFileCountLimit": "7"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "RestaurantWebApi"
    }
  }
}
